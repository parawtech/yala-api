<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="JDR-1090_17" author="sina@paraw.top" dbms="postgresql">
        <createTable tableName="auth_user_membership">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="__cdt" type="timestamp"/>
            <column name="__udt" type="timestamp"/>
            <column name="__ver" type="integer"/>
            <column name="is_default" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="bigint"/>
            <column name="user_id" type="bigint"/>
        </createTable>
        <addUniqueConstraint
                tableName="auth_user_membership"
                constraintName="auth_user_membership_uk_single_membership"
                columnNames="role_id, user_id"/>
        <addForeignKeyConstraint
                baseTableName="auth_user_membership"
                baseColumnNames="user_id"
                constraintName="auth_user_membership_fk_user_id"
                referencedTableName="auth_user"
                referencedColumnNames="id"/>
        <addForeignKeyConstraint
                baseTableName="auth_user_membership"
                baseColumnNames="role_id"
                constraintName="auth_user_membership_fk_role_id"
                referencedTableName="auth_tenant_role"
                referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>
