<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="JDR-1090_18" author="sina@paraw.top" dbms="postgresql">
        <createTable tableName="auth_user_membership_session">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="__cdt" type="timestamp"/>
            <column name="__udt" type="timestamp"/>
            <column name="__ver" type="integer"/>
            <column name="expired_at" type="timestamp"/>
            <column name="refreshable_until" type="timestamp"/>
            <column name="started_at" type="timestamp"/>
            <column name="unique_id" type="uuid"/>
            <column name="membership_id" type="bigint"/>
        </createTable>
        <addForeignKeyConstraint
                baseTableName="auth_user_membership_session"
                baseColumnNames="membership_id"
                constraintName="auth_user_membership"
                referencedTableName="auth_user_membership"
                referencedColumnNames="id"/>
        <createIndex indexName="auth_user_membership_session_idx_uuid"
                     tableName="auth_user_membership_session">
            <column name="unique_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
