<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="JDR-1090_12" author="sina@paraw.top" dbms="postgresql">
        <createTable tableName="auth_tenant_role">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="__cdt" type="timestamp"/>
            <column name="__udt" type="timestamp"/>
            <column name="__ver" type="integer"/>
            <column name="description" type="text"/>
            <column name="identifier" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="tenant_id" type="bigint"/>
        </createTable>
        <addUniqueConstraint tableName="auth_tenant_role"
                             columnNames="tenant_id, identifier"
                             constraintName="auth_tenant_roles_uk_identifier_tenant_id"/>
        <addForeignKeyConstraint baseTableName="auth_tenant_role"
                                 baseColumnNames="tenant_id"
                                 referencedTableName="auth_tenant"
                                 referencedColumnNames="id"
                                 constraintName="auth_tenant_roles_fk_tenant_id"/>
    </changeSet>
</databaseChangeLog>