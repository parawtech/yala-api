<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="JDR-1208_01" author="a.erfagh@jdro.ir">
        <createTable tableName="metrics">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="metric_name" type="text"/>
            <column name="metric_type" type="text"/>
            <column name="value" type="DOUBLE PRECISION"/>
            <column name="tenant" type="BIGINT"/>
            <column name="tags" type="text"/>
            <column name="time_window" type="TIMESTAMP"/>
            <!-- BaseEntity Fields -->
            <column name="__cdt" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="__udt" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="__ver" type="INTEGER">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <!-- ID is generated by JIDGenerator -->
    </changeSet>

</databaseChangeLog>
