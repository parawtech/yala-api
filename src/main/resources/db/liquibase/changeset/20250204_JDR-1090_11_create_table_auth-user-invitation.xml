<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="JDR-1090_15" author="sina@paraw.top" dbms="postgresql">
        <createTable tableName="auth_register_invitation">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="__cdt" type="timestamp"/>
            <column name="__udt" type="timestamp"/>
            <column name="__ver" type="integer"/>
            <column name="auth" type="text"/>
            <column name="expired_at" type="timestamp"/>
            <column name="inviter_id" type="bigint"/>
            <column name="role_id" type="bigint"/>
        </createTable>
        <addForeignKeyConstraint
                baseTableName="auth_register_invitation"
                baseColumnNames="role_id"
                constraintName="auth_register_invitation_fk_role_id"
                referencedTableName="auth_tenant_role"
                referencedColumnNames="id"/>
        <addForeignKeyConstraint
                baseTableName="auth_register_invitation"
                baseColumnNames="inviter_id"
                constraintName="auth_register_invitation_fk_inviter_id"
                referencedTableName="auth_user"
                referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>
