<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="JDR-1090_04" author="sina@paraw.top">
        <createTable tableName="payment_transaction">
            <column name="id" type="numeric(38, 0)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="_created_date" type="timestamp"/>
            <column name="_updated_date" type="timestamp"/>
            <column name="_version" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="additional_info" type="jsonb"/>
            <column name="amount" type="decimal(38,0)">
                <constraints nullable="false"/>
            </column>
            <column name="ipg" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="owner_reference" type="text"/>
            <column name="status" type="text"/>
            <column name="owner_id" type="numeric(38, 0)"/>
        </createTable>
        <addUniqueConstraint tableName="payment_transaction"
                             constraintName="payment_transaction_uk_owner_reference_owner_id"
                             columnNames="ipg, owner_id"/>
        <addForeignKeyConstraint constraintName="payment_transaction_fk_owner_id"
                                 baseColumnNames="owner_id" baseTableName="payment_transaction"
                                 referencedColumnNames="id" referencedTableName="payment_owner"/>
    </changeSet>

</databaseChangeLog>
